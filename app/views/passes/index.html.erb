<p id="notice"><%= notice %></p>

<h1>Listing Passes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Password salt</th>
      <th>Notes</th>
      <th>Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @passes.each do |pass| %>
      <tr>
        <td><%= pass.name %></td>
        <td><%= pass.username %></td>
        <td><%= pass.password_salt %></td>
        <td><%= pass.notes %></td>
        <td><%= pass.active %></td>
        <td><%= pass.user_id %></td>
        <td><%= link_to 'Show', pass %></td>
        <td><%= link_to 'Edit', edit_pass_path(pass) %></td>
        <td><%= link_to 'Destroy', pass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

